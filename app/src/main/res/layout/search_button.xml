<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/searchview_gray_floor"
    android:layout_alignParentStart="true">

    <ImageButton
        android:id="@+id/searchview_button"
        android:layout_width="wrap_content"
        android:layout_height="30.67dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/select_all_botton"
        android:layout_centerVertical="true"
        android:background="@drawable/searchview_bg"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/search_icon"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/searchview_button"
        android:layout_marginStart="10dp"
        android:id="@+id/imageView2" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/select_all_botton"
        android:background="@mipmap/up_all_icon"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/all_wenzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="全部"
        android:textSize="11.33sp"
        android:textColor="#9EA3AA"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/searchview_button"
        android:layout_marginEnd="10dp" />

    <View
        android:layout_width="1px"
        android:layout_height="30.67dp"
        android:background="?android:attr/listDivider"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/searchview_button"
        android:layout_marginEnd="45dp" />


</RelativeLayout>