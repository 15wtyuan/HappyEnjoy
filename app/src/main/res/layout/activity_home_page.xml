<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/green_toolbar_homepage"
            layout="@layout/green_toolbar_homepage"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/searchview_gray_floor"
            android:id="@+id/search"
            android:visibility="invisible">

            <EditText
                android:id="@+id/search_button"
                android:layout_width="wrap_content"
                android:layout_height="30.67dp"
                android:layout_marginLeft="10dp"
                android:layout_toLeftOf="@+id/sousuowenzi"
                android:layout_marginRight="10dp"
                android:paddingLeft="33sp"
                android:layout_centerVertical="true"
                android:background="@drawable/searchview_bg"
                android:maxLines="1"
                android:singleLine="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/search_icon"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/search_button"
                android:layout_marginStart="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索"
                android:id="@+id/sousuowenzi"
                android:textSize="11.33sp"
                android:textColor="#9EA3AA"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/search_mune"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/searchview_gray_floor"
            android:layout_below="@+id/green_toolbar_homepage"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/searchview_button"
                android:layout_width="wrap_content"
                android:layout_height="30.67dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@+id/select_all_botton"
                android:layout_centerVertical="true"
                android:background="@drawable/searchview_bg"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/search_icon"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/searchview_button"
                android:layout_marginStart="10dp"
                android:id="@+id/imageView2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_all_botton"
                android:background="@mipmap/up_all_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/all_wenzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="11.33sp"
                android:textColor="#9EA3AA"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/searchview_button"
                android:layout_marginEnd="10dp" />

            <View
                android:layout_width="1px"
                android:layout_height="30.67dp"
                android:background="?android:attr/listDivider"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/searchview_button"
                android:layout_marginEnd="45dp" />


        </RelativeLayout>

        <com.liaoinstan.springview.widget.SpringView
            android:id="@+id/springview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_mune">

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/issueList" />

        </com.liaoinstan.springview.widget.SpringView>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_buttonEnum="textOutsideCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_3_2"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_3_2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="20dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/add_news"
                android:layout_gravity="center" />
        </com.nightonke.boommenu.BoomMenuButton>

    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_item"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:layout_height="match_parent" />

</android.support.v4.widget.DrawerLayout>