<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/green_toolbar_homepage"
            layout="@layout/green_toolbar_homepage"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/searchview_gray_floor"
            android:layout_below="@+id/green_toolbar_homepage"
            android:layout_alignParentStart="true">

            <ImageButton
                android:id="@+id/searchview_button"
                android:layout_width="335dp"
                android:layout_height="30.67dp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:background="@drawable/searchview_bg"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/search_icon"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/searchview_button"
                android:layout_marginStart="10dp"
                android:id="@+id/imageView2" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/select_all_botton"
                android:background="@mipmap/up_all_icon"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/all_wenzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="11.33sp"
                android:textColor="#9EA3AA"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/searchview_button"
                android:layout_marginEnd="10dp" />

            <View
                android:layout_width="1px"
                android:layout_height="30.67dp"
                android:background="?android:attr/listDivider"
                android:layout_centerVertical="true"
                android:layout_alignEnd="@+id/searchview_button"
                android:layout_marginEnd="45dp" />


        </RelativeLayout>

    </RelativeLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_item"
        android:layout_width="match_parent"
        android:layout_gravity="start"
        android:background="#FFFFFF"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</android.support.v4.widget.DrawerLayout>